<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Business Search</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1>Search for Businesses</h1>

        <form id="searchForm" class="mb-4">
            <div class="input-group mb-3">
                <!-- Campo para a cidade -->
                <input type="text" id="cityInput" class="form-control" placeholder="Enter city name">
                
                <!-- Campo para o segmento -->
                <input type="text" id="segmentInput" class="form-control" placeholder="Enter business type">
            </div>

            <button class="btn btn-primary" type="submit">Search</button>
        </form>

        <div id="results"></div>

        <!-- Botões de paginação -->
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item">
                    <button id="prevPage" class="btn btn-primary" disabled>Previous</button>
                </li>
                <li class="page-item">
                    <button id="nextPage" class="btn btn-primary" disabled>Next</button>
                </li>
            </ul>
        </nav>
    </div>

    <script src="public/js/script.js"></script>
</body>
</html>
